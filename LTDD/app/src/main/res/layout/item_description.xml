<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <!-- Tiêu đề mô tả xe -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả xe"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="6dp" />

    <!-- Nội dung mô tả xe -->
    <TextView
        android:id="@+id/txtCarDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mitsubishi Mirage 2017, xe sạch sẽ, tiết kiệm xăng, máy lạnh tốt, bản đồ Vietmaps dẫn đường, camera 360, cam hành trình, màn hình Android xem Youtube, nghe nhạc."
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginBottom="12dp" />

    <!-- Divider for better separation -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="12dp" />

    <!-- Tiêu đề mô tả bài viết -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả bài viết"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="6dp"/>

    <!-- Nội dung mô tả bài viết -->
    <TextView
        android:id="@+id/txtPostDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài viết này cho thuê xe Mitsubishi Mirage 2017, xe sạch sẽ và tiết kiệm nhiên liệu, rất thích hợp cho chuyến đi dài. Liên hệ ngay để đặt xe."
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

</LinearLayout>
